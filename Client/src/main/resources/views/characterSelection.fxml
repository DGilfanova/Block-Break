<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="bodybg2" stylesheets="@../css/menu.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CharacterSelectionController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="126.0" prefWidth="625.0" stylesheets="@../css/menu.css" vbarPolicy="ALWAYS">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
               <content>
                  <FlowPane alignment="CENTER_LEFT" columnHalignment="CENTER" hgap="20.0" minHeight="100.0" minWidth="500.0" vgap="20.0">
                     <children>
                        <Button onMouseClicked="#croshDoubleMouseClicked"  fx:id="croshButton" minHeight="100.0" minWidth="100.0" mnemonicParsing="false" styleClass="crosh">
                        </Button>
                        <Button onMouseClicked="#persDoubleMouseClicked"  fx:id="persButton" layoutX="30.0" layoutY="38.0" minHeight="100.0" minWidth="100.0" mnemonicParsing="false" styleClass="pers" />
                        <Button fx:id="ratButton" layoutX="120.0" onMouseClicked="#ratDoubleMouseClicked"  layoutY="38.0" minHeight="100.0" minWidth="100.0" mnemonicParsing="false" styleClass="rat" />
                        <Button fx:id="spiderButton" layoutX="211.0" onMouseClicked="#spiderDoubleMouseClicked"  layoutY="38.0" minHeight="100.0" minWidth="100.0" mnemonicParsing="false" styleClass="spider" />
                        <Button fx:id="animButton" layoutX="120.0" onMouseClicked="#animDoubleMouseClicked"  layoutY="30.0" minHeight="100.0" minWidth="100.0" mnemonicParsing="false" styleClass="anim" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </FlowPane>
               </content>
            </ScrollPane>
            <Label text="Невозможно подключиться" textFill="RED" visible="false" />
            <Button fx:id="mainButton" onAction="#mainButtonPressed" mnemonicParsing="false" text="Готово">
               <font>
                  <Font size="19.0" />
               </font>
            </Button>
         </children>
         <stylesheets>
            <URL value="@../css/hero.css" />
            <URL value="@../css/menu.css" />
         </stylesheets>
      </VBox>
   </children>
</AnchorPane>
