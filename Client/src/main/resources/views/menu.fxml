<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Label?>
<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="bodybgmenu" stylesheets="@../css/menu.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController">
   <children>
      <VBox fx:id="vBox" alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Button fx:id="hostGameButton" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#hostButtonPressed" prefHeight="50.0" prefWidth="400.0" text="Найти соперника">
               <font>
                  <Font size="15.0" />
               </font></Button>

            <Button fx:id="connectButton" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#connectButtonPressed" prefHeight="50.0" prefWidth="400.0" text="Подключиться" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="15.0" />
               </font></Button>

            <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="200.0" text="Введите id комнаты!" textFill="RED" visible="false">
            <font>
               <Font size="15.0" />
            </font></Label>

         </children></VBox>
   </children>
</AnchorPane>
